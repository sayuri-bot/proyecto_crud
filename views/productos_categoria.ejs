<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos de la Categoría</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header') %>
  <div class="container mt-5">
    <h2 class="mb-4">Productos de la categoría: <%= categoria.nombre %></h2>
    <a href="/categorias" class="btn btn-secondary mb-3">Volver a Categorías</a>
    <% if (typeof session !== 'undefined' && session.user) { %>
      <a href="/productos/nuevo?categoria_id=<%= categoria.id %>" class="btn btn-success mb-3">Agregar Producto a esta Categoría</a>
    <% } %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Precio</th>
          <% if (typeof session !== 'undefined' && session.user) { %>
            <th>Acciones</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(function(producto) { %>
          <tr>
            <td><%= producto.id %></td>
            <td><a href="/productos/<%= producto.id %>"><%= producto.nombre %></a></td>
            <td>$<%= producto.precio %></td>
            <% if (typeof session !== 'undefined' && session.user) { %>
              <td>
                <a href="/productos/editar/<%= producto.id %>" class="btn btn-primary btn-sm">Editar</a>
                <form action="/productos/eliminar/<%= producto.id %>" method="POST" style="display:inline-block">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este producto?')">Eliminar</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <% if (productos.length === 0) { %>
      <div class="alert alert-info">No hay productos en esta categoría.</div>
    <% } %>
  </div>
</body>
</html>
