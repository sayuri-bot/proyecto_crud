<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Detalles del Producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header') %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <% if (imagenes && imagenes.length > 0) { %>
          <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% imagenes.forEach((imagen, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img src="<%= imagen.url %>" class="d-block w-100" alt="<%= producto.nombre %>">
                </div>
              <% }); %>
            </div>
            <% if (imagenes.length > 1) { %>
              <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
              </button>
            <% } %>
          </div>
        <% } else { %>
          <div class="alert alert-info">No hay imágenes disponibles para este producto</div>
        <% } %>
      </div>
      <div class="col-md-6">
        <h2 class="mb-4"><%= producto.nombre %></h2>
        <div class="card">
          <div class="card-body">
            <h3 class="card-title text-primary mb-4">$<%= producto.precio %></h3>
            <% if (categoria) { %>
              <p class="card-text"><strong>Categoría:</strong> <%= categoria.nombre %></p>
            <% } %>
            <div class="mt-4">
              <a href="/productos" class="btn btn-secondary">Volver a Productos</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>