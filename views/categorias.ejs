<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Categorías</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header') %>
  <div class="container mt-5">
    <h2 class="mb-4">Categorías</h2>
    <a href="/categorias/nueva" class="btn btn-success mb-3">Nueva Categoría</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% categorias.forEach(function(categoria) { %>
          <tr>
            <td><%= categoria.id %></td>
            <td><a href="/categorias/<%= categoria.id %>/productos"><%= categoria.nombre %></a></td>
            <td>
              <a href="/categorias/editar/<%= categoria.id %>" class="btn btn-primary btn-sm">Editar</a>
              <form action="/categorias/eliminar/<%= categoria.id %>" method="POST" style="display:inline-block">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar esta categoría?')">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
