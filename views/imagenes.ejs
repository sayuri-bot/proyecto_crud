<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Imágenes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header') %>
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Imágenes</h2>
      <a href="/imagenes/producto/nueva" class="btn btn-primary">Subir Imágenes</a>
    </div>

    <form id="selectorForm" method="GET" action="/imagenes">
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="categoria" class="form-label">Categoría</label>
          <select class="form-select" id="categoria" name="categoria_id">
            <option value="">Selecciona una categoría</option>
            <% categorias.forEach(function(cat) { %>
              <option value="<%= cat.id %>" <%= categoria_id == cat.id ? 'selected' : '' %>><%= cat.nombre %></option>
            <% }); %>
          </select>
        </div>
        <div class="col-md-6">
          <label for="producto" class="form-label">Producto</label>
          <select class="form-select" id="producto" name="producto_id">
            <option value="">Selecciona un producto</option>
            <% productos.forEach(function(prod) { %>
              <option value="<%= prod.id %>" data-categoria="<%= prod.categoria_id %>" <%= producto_id == prod.id ? 'selected' : '' %>><%= prod.nombre %></option>
            <% }); %>
          </select>
        </div>
      </div>
    </form>

    <div class="row mt-4">
      <% if (imagenes.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info">No hay imágenes para mostrar.</div>
        </div>
      <% } else { %>
        <% imagenes.forEach(function(imagen) { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="<%= imagen.url %>" class="card-img-top" alt="imagen">
              <div class="card-body">
                <h5 class="card-title">Imagen <%= imagen.id %></h5>
                <div class="d-flex justify-content-between mt-2">
                  <form action="/imagenes/eliminar/<%= imagen.id %>" method="POST" style="display:inline-block">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar esta imagen?')">Eliminar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <script>
    const categoriaSelect = document.getElementById('categoria');
    const productoSelect = document.getElementById('producto');
    const form = document.getElementById('selectorForm');

    categoriaSelect.addEventListener('change', () => {
      const categoriaId = categoriaSelect.value;
      const options = productoSelect.options;

      for (let i = 0; i < options.length; i++) {
        const option = options[i];
        if (!option.value) continue;
        option.style.display = option.dataset.categoria === categoriaId ? '' : 'none';
      }
      productoSelect.value = '';
      form.submit();
    });

    productoSelect.addEventListener('change', () => {
      if (productoSelect.value) {
        form.submit();
      }
    });
  </script>
</body>
</html>
